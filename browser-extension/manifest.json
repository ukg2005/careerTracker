{
  "manifest_version": 3,
  "name": "CareerTracker Clipper",
  "version": "1.0.0",
  "description": "Save job postings from LinkedIn, Indeed, Glassdoor and Naukri directly into CareerTracker.",
  "browser_specific_settings": {
    "gecko": {
      "id": "careertracker-clipper@local",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.naukri.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CareerTracker Clipper",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/view/*",
        "https://www.linkedin.com/jobs/collections/*",
        "https://*.indeed.com/viewjob*",
        "https://*.indeed.com/jobs*",
        "https://www.glassdoor.com/job-listing/*",
        "https://www.glassdoor.co.in/job-listing/*",
        "https://www.naukri.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
